# Environment for Docker Compose
NODE_ENV=production

# Application
APP_URL=http://localhost:3000
API_VERSION=v1
PORT=3000
LOG_LEVEL=info

# Database Connection
DATABASE_URL=mysql://startynk:password@db:3306/startynk_prod

# Database Configuration
DB_ROOT_PASSWORD=rootpassword
DB_NAME=startynk_prod
DB_USER=startynk
DB_PASSWORD=password

# Authentication - CHANGE THESE IN PRODUCTION
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-at-least-32-characters-long
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-at-least-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# Security
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
MAINTENANCE_MODE=false

# Optional: Redis (uncomment to enable)
# REDIS_URL=redis://redis:6379

# Optional: Email Service (uncomment to enable)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@startynk.com

# Optional: AWS S3 Storage (uncomment to enable)
# AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=startynk-prod

# Optional: Monitoring (uncomment to enable)
# SENTRY_DSN=https://your-key@sentry.io/project-id
# SENTRY_ENVIRONMENT=production