# Environment
NODE_ENV=production

# Application
PORT=3000
APP_URL=https://yourdomain.com
API_VERSION=v1

# Database - CHANGE THIS TO YOUR PRODUCTION DATABASE
DATABASE_URL="mysql://user:password@prod-db.yourdomain.com:3306/startynk_prod"
DATABASE_URL_DIRECT="mysql://user:password@prod-db.yourdomain.com:3306/startynk_prod"
DATABASE_POOL_SIZE=20

# Authentication - GENERATE SECURE SECRETS FOR PRODUCTION
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_64_CHARACTER_SECRET_IN_PRODUCTION"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_A_DIFFERENT_SECURE_64_CHARACTER_SECRET"
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d
NEXTAUTH_SECRET="CHANGE_THIS_TO_A_SECURE_NEXTAUTH_SECRET_IN_PRODUCTION"
NEXTAUTH_URL=https://yourdomain.com

# Security
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50
ALLOWED_ORIGINS=https://yourdomain.com

# Web App
NEXT_PUBLIC_API_URL=https://yourdomain.com/api/v1
NEXT_PUBLIC_APP_NAME=StarTynk
NEXT_PUBLIC_ENVIRONMENT=production

# Mobile App
EXPO_PUBLIC_API_URL=https://yourdomain.com/api/v1
EXPO_PUBLIC_APP_NAME=StarTynk
EXPO_PUBLIC_ENVIRONMENT=production
EXPO_PUBLIC_APP_SCHEME=startynk

# Logging
LOG_LEVEL=warn

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
MAINTENANCE_MODE=false

# Cache (Redis) - RECOMMENDED FOR PRODUCTION
REDIS_URL=redis://your-redis-server:6379
CACHE_TTL=3600

# Email Service - REQUIRED FOR PRODUCTION
SMTP_HOST=smtp.youremailprovider.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# AWS S3 Storage - RECOMMENDED FOR PRODUCTION
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=yourdomain-prod

# Monitoring - REQUIRED FOR PRODUCTION
SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Optional: Push Notifications
EXPO_PUBLIC_PUSH_TOKEN=your-expo-push-token
FCM_SERVER_KEY=your-fcm-server-key

# Optional: Analytics
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token