{
  "name": "startynk-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@repo/web",
    "dev:mobile": "turbo dev --filter=@repo/mobile",
    "build": "turbo build",
    "build:packages": "turbo build --filter='./packages/*'",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "turbo db:generate",
    "prepare": "husky install",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:types": "turbo type-check",
    "test:security": "pnpm audit && pnpm test:cors && pnpm test:auth",
    "test:cors": "tsx scripts/test-cors.ts",
    "test:auth": "tsx scripts/test-auth.ts",
    "test:all": "pnpm test:types && pnpm test && pnpm test:security",
    "test:coverage": "turbo test:coverage"
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/react-native": "^12.4.3",
    "@testing-library/jest-dom": "^6.4.2",
    "msw": "^2.1.7",
    "tsx": "^4.7.1",
    "@playwright/test": "^1.42.1",
    "autocannon": "^7.14.0",
    "axios": "^1.6.7",
    "chalk": "^5.3.0",
    "node-mocks-http": "^1.14.1"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9.0.0"
  }
}