{
  "name": "startynk-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:mobile": "turbo run dev --filter=@repo/mobile",
    "start": "turbo run start",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "db:seed": "turbo run db:seed",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "turbo run db:generate",
    "prepare": "husky install",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:types": "turbo run type-check",
    "test:security": "pnpm audit && pnpm test:cors && pnpm test:auth",
    "test:cors": "tsx scripts/test-cors.ts",
    "test:auth": "tsx scripts/test-auth.ts",
    "test:all": "pnpm test:types && pnpm test && pnpm test:security",
    "test:coverage": "turbo run test:coverage",
    "deploy": "bash scripts/deploy.sh",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:production": "bash scripts/deploy.sh production",
    "docker:build": "docker build -t startynk .",
    "docker:run": "docker-compose --env-file .env.docker up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "config:validate": "node -e \"const { EnvLoader } = require('./packages/config/dist/env/env.loader.js'); EnvLoader.load({ strict: true })\"",
    "config:print": "node -e \"const { EnvLoader } = require('./packages/config/dist/env/env.loader.js'); const env = EnvLoader.load({ strict: false, silent: false }); EnvLoader.printConfiguration(false)\"",
    "health": "curl -f http://localhost:3000/api/health || echo 'Health check failed'"
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/react-native": "^12.4.3",
    "@testing-library/jest-dom": "^6.4.2",
    "msw": "^2.1.7",
    "tsx": "^4.7.1",
    "@playwright/test": "^1.42.1",
    "autocannon": "^7.14.0",
    "axios": "^1.6.7",
    "chalk": "^5.3.0",
    "node-mocks-http": "^1.14.1"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9.0.0"
  }
}