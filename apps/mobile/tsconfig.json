{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": [
      "react-native",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/providers/*": [
        "./src/providers/*"
      ],
      "@/services/*": [
        "./src/services/*"
      ],
      "@/screens/*": [
        "./src/screens/*"
      ],
      "@/navigation/*": [
        "./src/navigation/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@repo/api": [
        "../../packages/api/src"
      ],
      "@repo/api/*": [
        "../../packages/api/src/*"
      ],
      "@repo/database": [
        "../../packages/database/src"
      ],
      "@repo/database/*": [
        "../../packages/database/src/*"
      ],
      "@repo/shared": [
        "../../packages/shared/src"
      ],
      "@repo/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@repo/features": [
        "../../packages/features/src"
      ],
      "@repo/features/*": [
        "../../packages/features/src/*"
      ],
      "@repo/trpc": [
        "../../packages/trpc/src"
      ],
      "@repo/trpc/*": [
        "../../packages/trpc/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "env.d.ts",
    "../../packages/*/src/**/*.ts",
    "../../packages/*/src/**/*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
