# Development Environment Configuration
# Local development settings

# =================
# ENVIRONMENT TYPE
# =================
EXPO_PUBLIC_ENVIRONMENT=development

# =================
# API CONFIGURATION
# =================
# Local development server
EXPO_PUBLIC_API_URL=http://localhost:3000/api/v1

# =================
# APP CONFIGURATION
# =================
EXPO_PUBLIC_APP_NAME=StarTynk Dev
EXPO_PUBLIC_APP_SCHEME=startynk-dev
EXPO_PUBLIC_APP_VERSION=1.0.0

# =================
# OPTIONAL SERVICES
# =================
# Leave Sentry DSN empty for development (optional)
# EXPO_PUBLIC_SENTRY_DSN=

# Local WebSocket for development (optional)
# EXPO_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# =================
# FEATURE FLAGS
# =================
# Development-specific feature flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOGS=true
EXPO_PUBLIC_MOCK_API=false