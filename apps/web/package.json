{
  "name": "@repo/web",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:custom": "tsx server.ts",
    "build": "next build",
    "build:vercel": "SKIP_ENV_VALIDATION=true next build",
    "start": "next start",
    "start:custom": "NODE_ENV=production tsx server.ts",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern='(unit|spec)\\.test\\.(ts|tsx)'",
    "test:integration": "jest --testPathPattern='integration\\.test\\.(ts|tsx)' --runInBand",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --testPathPattern='perf\\.test\\.(ts|tsx)'",
    "analyze": "ANALYZE=true npm run build",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next .turbo node_modules",
    "db:generate": "prisma generate --schema=../../packages/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=../../packages/database/prisma/schema.prisma",
    "config:validate": "node -e \"const { EnvLoader } = require('@repo/config/env'); EnvLoader.load({ strict: true })\"",
    "health": "curl -f http://localhost:3000/api/health"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@headlessui/react": "^2.2.6",
    "@hookform/resolvers": "^5.2.0",
    "@repo/api": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/features": "workspace:*",
    "@repo/shared": "workspace:*",
    "@repo/utils": "workspace:*",
    "@repo/validation": "workspace:*",
    "@tanstack/react-query": "^5.32.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/decimal.js": "^0.0.32",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/recharts": "^1.8.29",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.526.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.61.1",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.10",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@repo/config-typescript": "workspace:*",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2",
    "web-vitals": "^4.2.0"
  }
}
